    "bugs": {
        "url": "https://github.com/enonic/react4xp-build-components"
    },
    "homepage": "https://github.com/enonic/react4xp-build-components",
    "dependencies": {
        "chunks-2-json-webpack-plugin": "^1.0.0",
        "react4xp-build-entriesandchunks": "0.2.1",
        "babel-loader": "^7.1.5",
        "babel-preset-es2015": "^6.24.1",
        "babel-preset-stage-0": "^6.24.1",
        "babel-register": "^6.26.0",
        "webpack": "^4.29.6",
        "webpack-cli": "^3.2.3"
    },
    "peerDependencies": {},
    "devDependencies": {
        "babel-cli": "^6.26.0",
        "copyfiles": "^2.1.0",
